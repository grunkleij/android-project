<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/weather"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F7FA"
    tools:context=".HomeActivity">

    <!-- Movie Button -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/movie_btn"
        style="@style/Widget.MaterialComponents.Button.OutlinedButton"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="🎬 Movie"
        android:textAllCaps="false"
        android:textSize="18sp"
        android:backgroundTint="#FFFFFF"
        android:textColor="#333333"
        app:cornerRadius="20dp"
        app:strokeColor="#6200EE"
        app:strokeWidth="2dp"
        android:padding="12dp"
        app:icon="@drawable/movie_icon"
        app:iconTint="#6200EE"
        app:iconGravity="textStart"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/weather_btn"
        app:layout_constraintVertical_chainStyle="spread"
        android:layout_marginHorizontal="32dp"
        android:layout_marginTop="32dp"/>

    <!-- Weather Button -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/weather_btn"
        style="@style/Widget.MaterialComponents.Button.OutlinedButton"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="☀️ Weather"
        android:textAllCaps="false"
        android:textSize="18sp"
        android:backgroundTint="#FFFFFF"
        android:textColor="#333333"
        app:cornerRadius="20dp"
        app:strokeColor="#009688"
        app:strokeWidth="2dp"
        android:padding="12dp"
        app:icon="@drawable/weather_icon"
        app:iconTint="#009688"
        app:iconGravity="textStart"
        app:layout_constraintTop_toBottomOf="@id/movie_btn"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/currency_btn"
        android:layout_marginHorizontal="32dp"/>

    <!-- Currency Button -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/currency_btn"
        style="@style/Widget.MaterialComponents.Button.OutlinedButton"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="💱 Currency"
        android:textAllCaps="false"
        android:textSize="18sp"
        android:backgroundTint="#FFFFFF"
        android:textColor="#333333"
        app:cornerRadius="20dp"
        app:strokeColor="#FF9800"
        app:strokeWidth="2dp"
        android:padding="12dp"
        app:icon="@drawable/currency_icon"
        app:iconTint="#FF9800"
        app:iconGravity="textStart"
        app:layout_constraintTop_toBottomOf="@id/weather_btn"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/news_btn"
        android:layout_marginHorizontal="32dp"/>

    <!-- News Button -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/news_btn"
        style="@style/Widget.MaterialComponents.Button.OutlinedButton"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="📰 News"
        android:textAllCaps="false"
        android:textSize="18sp"
        android:backgroundTint="#FFFFFF"
        android:textColor="#333333"
        app:cornerRadius="20dp"
        app:strokeColor="#3F51B5"
        app:strokeWidth="2dp"
        android:padding="12dp"
        app:icon="@drawable/news_icon"
        app:iconTint="#3F51B5"
        app:iconGravity="textStart"
        app:layout_constraintTop_toBottomOf="@id/currency_btn"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginHorizontal="32dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>
